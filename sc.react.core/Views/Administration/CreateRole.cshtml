@model sc.react.core.Models.CreateRoleViewModel
@{
    ViewBag.Title = "Create New Role";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm("CreateRole", "Administration", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @*<h4>Create a new account.</h4>
        <hr />*@
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control", @placeholder = "Role Name" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" class="btn btn-primary btn-block mb-3" value="Create" />
        </div>
    </div>
}
